        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDetailID)
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
