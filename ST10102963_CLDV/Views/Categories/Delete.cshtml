@model ST10102963_CLDV.Models.CategoriesViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    header {
        background-color: #333;
        color: #fff;
        padding: 10px 20px;
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .about-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
    }

    .team {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .team-member {
        flex-basis: calc(33.33% - 20px);
        margin-bottom: 20px;
    }

        .team-member img {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

    @@media (max-width: 768px) {
        .team-member {
            flex-basis: 100%;
        }
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10102963_CLDV.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
        <div class="box2">
    <h4>Categories</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Category ID
        </dt> <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryID)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
                <button type="submit" class="btn btn-danger"><span class="bi bi-trash"></span> Delete</button> |
        <a asp-action="Index">Back to List</a>
